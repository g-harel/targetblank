{
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "trash .website/*",
    "build:website": "parcel build website/index.html -d .website --no-source-maps",
    "release": "run-s build release:*",
    "release:firefox": "cd .website web-ext-submit",
    "dev": "parcel -p 1324 -d .dist website/index.html",
    "test": "run-s fmt lint check test:unit build",
    "test:unit": "jest",
    "lint": "tslint --project tsconfig.json website/**/*.ts --fix",
    "check": "tsc -noEmit",
    "fmt": "prettier --list-different --write --ignore-path .gitignore **/*.{js,ts,tsx}"
  },
  "dependencies": {
    "csstips": "^1.2.0",
    "okwolo": "^3.4.5",
    "typestyle": "^2.0.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-bundle-manifest": "^0.2.0",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "prettier": "^1.18.2",
    "trash-cli": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.6.4",
    "web-ext-submit": "^3.2.0",
    "web-ext-types": "^3.2.1"
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "always"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "staticFiles": {
    "staticPath": "extension"
  }
}
